{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["@astrojs/image/client"]
  },
  "exclude": ["node_modules"],
  "include": ["src/utils/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "src/js/test.js", "src/js/paginationDefault.ts"],
  "declaration": true
}
